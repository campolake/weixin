	<div class="content">
        <div class="pwrap">
            <div class="phead">
                <h3 class="ptitle">编辑真实信息</h3>
            </div>
            <div class="pbody">
			<div class="pbox">
	           	<div class="form form-password">
	 <form action="http://www.weixiaoxin.com/WxAdvs/addreal/0" method="post" id="changepasswordForm" enctype="multipart/form-data">
	 <input name="step" value="2" type="hidden">
	<div class="row">
		<label class="label">登录用户名：　</label>
		<div class="enter">
			<input type="type" onfocus="clearError(this)" id="username" name="username" readonly="" value="h622" class="text">
										</div>
	</div>
	<div class="row">
		<label class="label">邮箱：　</label>
		<div class="enter">
			<input type="type" onfocus="clearError(this)" id="email" name="email" value="vekise@163.com" class="text">
